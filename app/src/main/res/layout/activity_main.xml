<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
    android:layout_height="match_parent" android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:paddingBottom="@dimen/activity_vertical_margin" tools:context=".MainActivity">

    <TextView android:text="My Nanodegree Apps!"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:textSize="22sp"
        android:id="@+id/textView" />

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="65dp">

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="SPOTIFY STREAMER"
            android:layout_gravity="center_horizontal"
            android:background="@color/appBackground"
            android:onClick="spotifyClick" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Football Scores App"
            android:layout_gravity="center_horizontal"
            android:background="@color/appBackground"
            android:onClick="footballClick" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Library App"
            android:layout_gravity="center_horizontal"
            android:background="@color/appBackground"
            android:onClick="libraryClick" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Build It Bigger"
            android:layout_gravity="center_horizontal"
            android:background="@color/appBackground"
            android:onClick="buildItClick" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="XYZ Reader"
            android:layout_gravity="center_horizontal"
            android:background="@color/appBackground"
            android:onClick="readerClick" />

        <Button
            android:layout_width="@dimen/button_width"
            android:layout_height="wrap_content"
            android:layout_margin="@dimen/button_margin"
            android:text="Capstone"
            android:layout_gravity="center_horizontal"
            android:background="@color/capstoneAppBackground"
            android:onClick="capstoneClick" />
    </LinearLayout>

</RelativeLayout>
